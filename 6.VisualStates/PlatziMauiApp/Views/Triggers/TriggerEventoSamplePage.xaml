<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PlatziMauiApp.Views.Triggers"
             x:Class="PlatziMauiApp.Views.Triggers.TriggerEventoSamplePage"
             Title="TriggerEventoSamplePage">
    <VerticalStackLayout>
     <!-- Event Trigger -->
        <Button Text            ="Click here"
                BackgroundColor ="#A569BD"
                TextColor       ="White">
            <Button.Triggers>
               <EventTrigger Event="Clicked">
                    <local:TriggerSample />
               </EventTrigger>
            </Button.Triggers>
        </Button>
    </VerticalStackLayout>
</ContentPage>
